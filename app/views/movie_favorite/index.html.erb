<p id="notice"><%= notice %></p>

<h1>Listing Movie Favorites</h1>

<% if !signed_in? %>
  <h3>Sign in to get started Favorite movies!</h3>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Movie</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @movie_favorite.each do |movie_favorite| %>
        <tr>
          <td><%= movie_favorite.movie.title %></td>
          <td><%= movie_favorite.user.name %></td>

          <td><%= link_to 'Destroy', unfavorite_movie_path(movie_favorite.movie), method: :post, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Movie', root_path %>
<% end %>
