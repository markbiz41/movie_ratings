<% if @name.blank? %>
  <%= form_tag(hello_path, class: "form-horizontal") do %>
    <div class="form-group">
      <%= label_tag(:name, "Name:") %>
      <%= text_field_tag(:name, nil, class: "form-control", placeholder: "Enter name") %>
    </div>

    <div class="form-group">
      <%= label_tag(:user) %>
      <%= date_field(:user, :born_on, class: "form-control") %>
    </div>

    <div class="form-group">
      <%= label_tag(:password) %>
      <%= password_field_tag(:password, nil, class: "form-control") %>
    </div>

    <div class="form-group">
        <%= label_tag(:message) %>
        <%= text_area_tag(:message, nil, class: "form-control") %>
    </div>

    <%= submit_tag("Submit") %>
  <% end %>


<% else %>
  <h1>Hello <%= @name %></h1>
<% end %>
