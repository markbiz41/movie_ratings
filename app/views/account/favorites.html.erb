<h1>Your Favorite Movies</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Avg User Rating</th>
      <th>Plot</th>
      <th>Release year</th>
      <th>Rating</th>
      <th>User Ratings Count</th>
      <th>Genres</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.movie_favorites.each do |f| %>
      <tr>
        <td><%= image_tag f.movie.movie_poster.thumb.url %></td>
        <td><%= link_to f.movie.title, f.movie %></td>
        <td><%= f.movie.avg_rating %></td>
        <td><%= f.movie.plot %></td>
        <td><%= f.movie.release_year %></td>
        <td><%= f.movie.rating %></td>
        <td><%= f.movie.movie_ratings.size %></td>
        <td><%= f.movie.genres.collect{|g| g.name}.join ", " %></td>
      </tr>
    <% end %>
  </tbody>
</table>
